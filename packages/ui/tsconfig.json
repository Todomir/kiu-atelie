{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strictBindCallApply": true,
    "baseUrl": "src/",
    "paths": {
      "@/*": ["*"],
      "@emotion/core": ["./emotion.d.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": [
    "typePatches"
  ]
}